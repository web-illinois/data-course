@page "/program/general"
@layout SidebarLayout

<PageTitle>Programs - General Information</PageTitle>

<ilw-content>
    <h1>General Information</h1>
</ilw-content>

@if (ProgramItem != null) {
    <MediumText Title="Title" FieldItems="FieldItems" @bind-Value="ProgramItem.Title"></MediumText>
    <LargeText Title="Summary Text" FieldItems="FieldItems" @bind-Value="ProgramItem.SummaryText"></LargeText>
    <button class="ilw-button ilw-theme-orange-2" @onclick="Save" @onblur="Layout.RemoveMessage">Save</button>
    <ViewLink Title="Program" Url="@ProgramItem.UrlFull"></ViewLink>
}

