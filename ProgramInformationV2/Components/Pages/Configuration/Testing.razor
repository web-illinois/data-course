@page "/configuration/testing"
@layout SidebarLayout

<PageTitle>Configuration - Testing Access</PageTitle>

<ilw-content>
    <h1>Testing Access</h1>
    <p>You can either temporarily give yourself access to the testing area, or you can go to the security area and add yourself as a user permanently.</p>
</ilw-content>
<ul class="ilw-buttons">
    <li><button class="ilw-button" @onclick="e => { SwitchToTesting(false); }">Testing Area Main Page</button></li>
    <li><button class="ilw-button" @onclick="e => { SwitchToTesting(true); }">Testing Area Security</button></li>
</ul>
